<!--BACKGROUND PROPERTIES:
    -background-color     background-color: blue;

    -background-image     url("path")

    -bg-repeat:
     1.background-repeat:repeat-x(horizontal repeat)
     2.background-repeat:repeat-y;(vertical repeat)
     3.background-repeat:repeat-;(repeat number of times)
     4,background-repeat:no-repeat;(no repetation)

    -bg-attachment
     1.bg-attachment(fixed)
     2.background-attachment:scroll;

    -bg-position
    background-position:top right;
    background-position:bottom right;
    background-position: left bottom;
    -bg-size
    1.background-size:100% 100%; width height
    2.background-size:cover; its zoom and cover the page
-->
<html>
    <head>
        <title></title>
        <style>
            body{
                /*short hand property is used to write in single line*/
                background:red url('pp.jpg') no-repeat fixed bottom left;
                /*background-image:url('pp.jpg');
                background-repeat:no-repeat;
                background-attachment:fixed;
                background-position:bottom left;*/
                
            }
        </style>
    </head>
