            /* *{
                margin:0%;
                padding:0%;
            }to avoid internal spaccing*/
            p{
                /*border-style:double;
                border-width: 1px 5px 8px 6px;
                border-color:red green pink maroon;*/
                border: 1px green dashed;
                margin-top:50%;
                width:30%;
                padding-top:2% 10%;
            }
        </style>
    </head>
